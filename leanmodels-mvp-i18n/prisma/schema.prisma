generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  projects   Project[]
  createdAt  DateTime @default(now())
}

model Project {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  title     String
  canvases  Canvas[]
  chats     ChatThread[]
  createdAt DateTime @default(now())
}

model Canvas {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  type      String
  sections  Section[]
  version   Int      @default(1)
}

model Section {
  id       String  @id @default(cuid())
  canvas   Canvas  @relation(fields: [canvasId], references: [id])
  canvasId String
  key      String
  title    String
  order    Int
  items    Item[]
}

model Item {
  id         String  @id @default(cuid())
  section    Section @relation(fields: [sectionId], references: [id])
  sectionId  String
  content    String
  order      Int
  rationale  String?
}

model ChatThread {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  messages  ChatMessage[]
}

model ChatMessage {
  id        String     @id @default(cuid())
  thread    ChatThread @relation(fields: [threadId], references: [id])
  threadId  String
  role      String
  text      String
  meta      Json?
  createdAt DateTime   @default(now())
}
